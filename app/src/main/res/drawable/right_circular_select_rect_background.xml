<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="@dimen/dimen_4dp" android:topLeftRadius="@dimen/dimen_0dp" android:bottomLeftRadius="@dimen/dimen_0dp"/>
            <!-- Set the border color of your layout here -->
            <solid android:color="@android:color/white" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:right="2dp" android:bottom="@dimen/dimen_2dp" android:top="@dimen/dimen_2dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

</layer-list>